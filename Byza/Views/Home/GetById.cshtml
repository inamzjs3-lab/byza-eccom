@using ServiceLayer.ServiceModels
@model ProductResponceModel

<h2>Update Product</h2>

<form asp-action="UpdateProducts" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div class="mb-2">
        <label>Name</label>
        <input asp-for="ProductName" class="form-control" value="@Model.ProductName"/>
    </div>

    <div class="mb-2">
        <label>Description</label>
        <input asp-for="Description" class="form-control"value="@Model.Description" />
    </div>

    <div class="mb-2">
        <label>Price</label>
        <input asp-for="Price" class="form-control"value="@Model.Price" />
    </div>

    <div class="mb-2">
        <label>Stock</label>
        <input asp-for="StockQuantity" class="form-control"value="@Model.StockQuantity" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
