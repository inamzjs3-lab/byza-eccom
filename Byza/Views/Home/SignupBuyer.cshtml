<form asp-controller="Auth" asp-action="SignUpBuyer" method="post">
    <div class="mb-3">
        <label for="exampleInputFirstName" class="form-label">Your First Name</label>
        <input type="text"name="FirstName" class="form-control" id="Firstname">
    </div>
    <div class="mb-3">
        <label for="exampleInputMobile" class="form-label">Your Phone Number</label>
        <input type="text" name="Mobile" class="form-control" id="Mobile">
    <div class="mb-3">
        <label for="exampleInputLastName" class="form-label">Your Last Name</label>
        <input type="text" name="Lastname" class="form-control" id="Lastname">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Your Email address</label>
        <input type="email" name="Email" class="form-control" id="email" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Your Password</label>
        <input type="password" name="Password" class="form-control" id="password">
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword2"  class="form-label">Confirm Your Password</label>
        <input type="password"name="ConfirmPassword" class="form-control" id="confirmpassword">
    </div>
   @*  <div class="form-check mt-2">
        <input class="form-check-input" type="checkbox" id="rememberMe">
        <label class="form-check-label" for="rememberMe"> Remember Me</label>
    </div> *@
    <button type="submit" class="btn btn-primary float-end">Submit</button>
</form>

