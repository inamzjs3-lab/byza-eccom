<form asp-controller="Auth" asp-action="Login" method="post">

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-5">

                <div class="card shadow p-4" style="border-radius:10px; background:#fff;">

                    <h3 class="text-center mb-4">Login</h3>

                    <div class="mb-3">
                        <label class="form-label">Email or Mobile</label>
                        <input type="text" name="EmailOrMobile" class="form-control" placeholder="Enter email or mobile">
                        <div class="form-text">We'll never share your email with anyone else.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" name="Password" class="form-control" placeholder="Enter password">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <input type="text" name="UserRole" class="form-control" placeholder="Buyer or Seller">
                    </div>

                    <!-- Hidden Buyer Role (optional) -->
                    <input type="hidden" name="UserRole" value="Buyer" />

                    <button type="submit" class="btn btn-primary w-100 mt-3">
                        Login
                    </button>

                </div>

            </div>
        </div>
    </div>

</form>
