@using ServiceLayer.ServiceModels
@model ProductResponceModel

<h2>Update Product</h2>
<form asp-action="UpdateProducts" asp-controller="Product" method="post">
    <input type="hidden" name="Id" value="ProductId" />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>StockQuantity</label>
        <input asp-for="StockQuantity" class="form-control" />
    </div>

    <div class="form-group">
        <label>Image</label>
        <input asp-for="ProductImage" class="form-control" />
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Update Product</button>
    <a href="@Url.Action("UpdateProducts", "Product", new { id = Model.Id })" title="Edit">
    </a>

</form>

