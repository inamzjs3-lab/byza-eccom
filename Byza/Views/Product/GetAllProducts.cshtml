@using ServiceLayer.ServiceModels
@model List<ProductResponceModel>

<h2>All Products</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Image</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td><img src="data:image/[image-type];base64, @product.ProductImage" height="80" width="80" /></td>
                <td>
                    <button type="button" onclick="confirmUpdate(@product.Id)"></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmUpdate(id) {
            location.href = '/editproduct/' + id;
    }
</script>

<button type="button"
        class="btn btn-primary"
        onclick="location.href='@Url.Action("AddProducts", "Home")'">
    Add New Product
</button>
